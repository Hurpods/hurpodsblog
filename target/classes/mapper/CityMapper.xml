<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hurpods.ssm.blog.mapper.CityMapper">
    <resultMap id="CityResultMap" type="com.hurpods.ssm.blog.models.City">
        <id column="code_c" property="cityCode" jdbcType="VARCHAR"/>
        <result column="id" property="cityId" jdbcType="VARCHAR"/>
        <result column="name" property="cityName" jdbcType="VARCHAR"/>
        <result column="code_p" property="provinceCode" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getAllCity" resultMap="CityResultMap">
        select *
        from city
    </select>
    <select id="getCityById" resultMap="CityResultMap" parameterMap="String">
        select *
        from city
        where id = ${id}
    </select>
    <select id="getCityByCode" resultMap="CityResultMap" parameterMap="String">
        select *
        from city
        where code_c = ${code_c}
    </select>
    <select id="getCityByProvince" resultMap="CityResultMap" parameterMap="String">
        select *
        from city
        where code_p = ${code_p}
    </select>
    <select id="getCityCodeByProvince" resultMap="String" parameterMap="String">
        select code_c
        from city
        where code_p = ${}
    </select>
</mapper>