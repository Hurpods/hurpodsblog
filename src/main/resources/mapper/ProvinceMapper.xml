<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hurpods.ssm.blog.mapper.ProvinceMapper">
    <resultMap id="ProvinceResultMap" type="com.hurpods.ssm.blog.models.Province">
        <id column="code_p" property="provinceCode" jdbcType="VARCHAR"/>
        <result column="id" property="provinceId" jdbcType="VARCHAR"/>
        <result column="name" property="provinceName" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getAllProvince" resultMap="ProvinceResultMap">
        select *
        from province;
    </select>
    <select id="getProvinceById" resultMap="ProvinceResultMap" parameterMap="String">
        select *
        from province
        where id = #{id};
    </select>
    <select id="getProvinceByCode" resultMap="ProvinceResultMap" parameterMap="String">
        select *
        from province
        where code_p = #{code_p};
    </select>
</mapper>